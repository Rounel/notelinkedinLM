{
  "manifest_version": 3,
  "name": "LinkedIn Post Analytics",
  "version": "1.0.0",
  "description": "Scrape et analyse les posts LinkedIn d'un profil avec génération de PDF analytics",
  "permissions": [
    "activeTab",
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["pdf-generator.js", "content.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["libs/jspdf.min.js", "page-context-pdf.js"],
      "matches": ["https://www.linkedin.com/*"]
    }
  ]
}
